SERFCOMP64 = $(SERFCOMP)
SERCCOMP64 = $(SERCCOMP)
ifeq ($(PARFCOMP64), )
PARFCOMP64 = $(PARFCOMP)
endif
ifeq ($(ARCH), 64)
SERFCOMP32 = $(SERFCOMP) -m32
SERCCOMP32 = $(SERCCOMP) -m32
ifeq ($(PARFCOMP32), )
PARFCOMP32 = $(PARFCOMP) -m32
endif
all: 32/sincos 64/sincos
else
SERFCOMP32 = $(SERFCOMP)
SERCCOMP32 = $(SERCCOMP)
ifeq ($(PARFCOMP32), )
PARFCOMP32 = $(PARFCOMP)
endif
all: 32/sincos
endif

32/sincos: 32/sincos.o 32/sincos_serial.o 32/main.o
	$(PARFCOMP32) 32/main.o 32/sincos_serial.o 32/sincos.o -o $@
64/sincos: 64/sincos.o 64/sincos_serial.o 64/main.o
	$(PARFCOMP64) 64/main.o 64/sincos_serial.o 64/sincos.o -o $@

32/main.o: ../main.c
	$(SERCCOMP32) -O$(OPT) -g -std=c99 -I/opt/kgen/include -c $< -o $@
64/main.o: ../main.c
	$(SERCCOMP64) -O$(OPT) -g -std=c99 -I/opt/kgen/include64 -c $< -o $@

32/sincos.o: ../sincos.F90
	$(PARFCOMP32) $(KGFFLAGS) -O$(OPT) -g -c $< -o $@
64/sincos.o: ../sincos.F90
	$(PARFCOMP64) $(KGFFLAGS) -O$(OPT) -g -c $< -o $@

32/sincos_serial.o: ../sincos.F90
	$(SERFCOMP32) -DSERIAL -O$(OPT) -g -c $< -o $@
64/sincos_serial.o: ../sincos.F90
	$(SERFCOMP64) -DSERIAL -O$(OPT) -g -c $< -o $@

clean:
	rm -rf 32/*.o 32/*.mod 32/sincos 64/*.o 64/*.mod 64/sincos \
	*.bc* *.o *.mod *_kernelgen.* *.host.*
